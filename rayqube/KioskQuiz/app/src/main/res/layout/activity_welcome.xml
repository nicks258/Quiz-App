<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/background"
tools:context=".WelcomeActivity">
  <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/title"
    android:layout_height="wrap_content">
      <TextView
        android:layout_width="match_parent"
        android:textColor="#963FBF"
        android:textSize="25sp"
        android:padding="15sp"
        android:text="@string/international_women_s_day_2018"
        android:layout_height="wrap_content" />
    <TextView
      android:layout_width="match_parent"
      android:textColor="#963FBF"
      android:textStyle="bold"
      android:textSize="25sp"
      android:paddingStart="110sp"
      android:paddingEnd="90sp"
      android:text="@string/gettingtoequal"
      android:layout_height="wrap_content" />
  </LinearLayout>
  <RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/paticipate_layout"
    android:layout_below="@+id/title"
    android:layout_marginTop="50sp"
    android:layout_height="wrap_content">
    <TextView
      android:layout_width="match_parent"
      android:textColor="#A64B24"
      android:textSize="35sp"
      android:id="@+id/prize"
      android:padding="10sp"
      android:gravity="center"
      android:layout_height="wrap_content"
      android:text="@string/participate_in_a_simple_5_step_quiz_and_stand_a_chance_to_win_vouchers"/>

    <TextView
      android:layout_width="match_parent"
      android:textColor="#A64B24"
      android:textSize="35sp"
      android:paddingStart="20sp"
      android:textStyle="bold"
      android:paddingTop="20sp"
      android:layout_below="@+id/prize"
      android:layout_marginTop="10sp"
      android:layout_height="wrap_content"
      android:text="HOW TO PLAY"/>
  </RelativeLayout>
  <RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/rules_layout"
    android:paddingStart="20sp"
    android:layout_below="@+id/paticipate_layout"
    android:paddingTop="30sp"
    android:layout_height="wrap_content">
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rule_1"
    android:orientation="horizontal">
    <ImageView
      android:layout_width="40sp"
      android:layout_height="40sp"
      android:src="@drawable/circle"/>
    <TextView
      android:layout_width="wrap_content"
      android:textColor="#963FBF"
      android:paddingStart="30sp"
      android:textSize="30sp"
      android:layout_height="wrap_content"
      android:text="@string/fill_in_on_the_gettingtoequal_app"/>
  </LinearLayout>
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingTop="20sp"
      android:id="@+id/rule_2"
      android:layout_below="@id/rule_1"
      android:orientation="horizontal">
      <ImageView
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:src="@drawable/circle"/>
      <TextView
        android:layout_width="wrap_content"
        android:textColor="#963FBF"
        android:paddingStart="30sp"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        android:text="@string/there_will_be_a_total_of_5_questions"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingTop="20sp"
      android:id="@+id/rule_3"
      android:layout_below="@id/rule_2"
      android:orientation="horizontal">
      <ImageView
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:src="@drawable/circle"/>
      <TextView
        android:layout_width="wrap_content"
        android:textColor="#963FBF"
        android:paddingStart="30sp"
        android:paddingEnd="20sp"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        android:text="@string/answer_all_the_questions_correctly_to_win_the_voucher"/>
    </LinearLayout>
  </RelativeLayout>
  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="START"
    android:textSize="30sp"
    android:id="@+id/start_button"
    android:layout_marginStart="10sp"
    android:layout_marginBottom="30sp"
    android:layout_marginEnd="10sp"
    android:background="@drawable/button_background"
    android:layout_alignParentBottom="true"/>
</RelativeLayout>
