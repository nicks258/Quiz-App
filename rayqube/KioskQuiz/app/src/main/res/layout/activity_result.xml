<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rayqube.kioskquiz.ResultActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:id="@+id/logo"
        android:src="@drawable/culture_logo"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/logo" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginTop="15sp"
        android:orientation="vertical"
        android:id="@+id/question_answer">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question 1"
        android:fontFamily="@font/arial"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/question1"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Answer"
            android:textSize="30sp"
            android:fontFamily="@font/arial"
            android:textColor="@color/darkOrange"
            android:id="@+id/answer1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial"
            android:paddingTop="20sp"
            android:text="Question 1"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/question2"/>
        <TextView
            android:layout_width="match_parent"
            android:fontFamily="@font/arial"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Answer"
            android:textColor="@color/darkOrange"
            android:id="@+id/answer2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:fontFamily="@font/arial"
            android:paddingTop="20sp"
            android:text="Question 1"
            android:textColor="@color/colorPrimary"
            android:id="@+id/question3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:fontFamily="@font/arial"
            android:text="Answer"
            android:textColor="@color/darkOrange"
            android:id="@+id/answer3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial"
            android:textSize="30sp"
            android:paddingTop="20sp"
            android:text="Question 1"
            android:textColor="@color/colorPrimary"
            android:id="@+id/question4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:paddingTop="20sp"
            android:text="Answer"
            android:fontFamily="@font/arial"
            android:textColor="@color/darkOrange"
            android:id="@+id/answer4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20sp"
            android:text="Question 1"
            android:textSize="30sp"
            android:fontFamily="@font/arial"
            android:textColor="@color/colorPrimary"
            android:id="@+id/question5"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial"
            android:textSize="30sp"
            android:text="Answer"
            android:textColor="@color/darkOrange"
            android:id="@+id/answer5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/question_answer"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your score: "

        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/scoreText"
        android:text="5"
        android:textSize="35sp"
        android:textColor="#F00"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <RatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        />
    <Button
        android:layout_width="match_parent"
        android:id="@+id/submit_button"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar1"
        android:background="@drawable/button_background"
        android:layout_margin="30sp"
        android:text="@string/submit_my_entery"
        android:textColor="#fff"/>

    </LinearLayout>
    <ProgressBar
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:visibility="gone"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"/>
</RelativeLayout>
</ScrollView>